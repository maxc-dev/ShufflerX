<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_corner"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.setup.SetupActivity"
    tools:showIn="@layout/activity_setup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/info_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/TextOnBackground"
            android:textAlignment="center"
            android:text="Dr Max Carter"
            android:textStyle="italic"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/info_author"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:columnCount="2"
            android:rowCount="2"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="true"
            android:columnOrderPreserved="true"
            android:padding="20dp">

            <include layout="@layout/option_card"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <include layout="@layout/option_card"
                android:layout_columnWeight="2"
                android:layout_rowWeight="1"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <include layout="@layout/option_card"
                android:layout_columnWeight="1"
                android:layout_rowWeight="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <include layout="@layout/option_card"
                android:layout_columnWeight="2"
                android:layout_rowWeight="2"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />

            <!-- TODO:
             Insert card views for the following options:
             stopwatch?
             max questions?
             question references?
             repeat failed questions?

             line break

             recycler view for all categories
             -->


        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>